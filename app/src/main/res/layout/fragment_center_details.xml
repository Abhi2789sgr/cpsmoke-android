<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CenterDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_center_details"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/left_arrow_blue_cricled"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CENTER DETAILS"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Name : "
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/center_name_detail"
            app:layout_constraintEnd_toStartOf="@id/center_name_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/center_name_detail"
            app:layout_constraintVertical_bias="0.2" />

        <EditText
            android:id="@+id/center_name_detail"
            android:layout_width="wrap_content"
            android:minWidth="400dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:hint="Enter Name"
            android:imeOptions="flagNoExtractUi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintHorizontal_bias="0.6"/>

        <Button
            android:id="@+id/edit_center_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:background="@color/orangered"
            android:padding="15dp"
            android:text="EDIT"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.999"
            app:layout_constraintHorizontal_bias="0.20"/>

        <Button
            android:id="@+id/save_center_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:background="@color/appGreen"
            android:padding="15dp"
            android:text="SAVE"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.999"
            app:layout_constraintHorizontal_bias="0.85"/>

        <Button
            android:id="@+id/buttonspace"
            android:layout_width="161dp"
            android:layout_height="175dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/center_name_detail"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonsecondSpace"
            android:layout_width="497dp"
            android:layout_height="119dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/textView25"
            app:layout_constraintEnd_toEndOf="@+id/textView24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_center_details" />

        <Button
            android:id="@+id/button3space"
            android:layout_width="118dp"
            android:layout_height="193dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/center_name_detail"
            app:layout_constraintTop_toBottomOf="@+id/buttonspace" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>