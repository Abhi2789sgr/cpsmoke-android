<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Fuel_Type">

    <TextView
        android:id="@+id/fuel_type_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUEL TYPE :"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"/>


    <Button
        android:id="@+id/fuel_type_petrol_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@color/appSkyBlue"
        android:text="Petrol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.15"/>

    <Button
        android:id="@+id/fuel_type_lpg_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@color/appSkyBlue"
        android:text="LPG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.90" />

    <Button
        android:id="@+id/fuel_type_cng_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@color/appSkyBlue"
        android:text="CNG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/enter_fuel_type_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="ENTER"
        android:background="@color/appGreen"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>