<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ServicesFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/date_time_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Adjust Date &amp; Time"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/centername_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Center Name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.7"
            android:weightSum="2">

            <Button
                android:id="@+id/servicemode_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Service Mode"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/calibration_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Calibration"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/testapi_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Test API"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bandselection_btn"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/appSkyBlue"
                android:padding="10dp"
                android:text="Band Selection"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/done_btn"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="200dp"
            android:background="@color/appGreen"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="DONE"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>